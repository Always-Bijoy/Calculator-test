<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.example.bijoy.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/viewOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margine_top"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margine_top"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="@dimen/font_size"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2sp"
            android:background="@drawable/operation_btn_bg"
            android:layout_weight="1"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/min"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            android:layout_margin="2sp"
            android:background="@drawable/operation_btn_bg"
            android:layout_weight="1"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/mult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            android:background="@drawable/operation_btn_bg"
            android:layout_margin="@dimen/soft_margine"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/soft_margine"
            android:layout_weight="1"
            android:background="@drawable/operation_btn_bg"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2sp"
            android:background="@drawable/num_color"
            android:layout_weight="1"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            android:layout_margin="2sp"
            android:background="@drawable/num_color"
            android:layout_weight="1"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            android:background="@drawable/num_color"
            android:layout_margin="@dimen/soft_margine"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:text="cln"
            android:textStyle="bold"
            android:background="@drawable/operation_btn_bg"
            android:layout_margin="@dimen/soft_margine"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2sp"
            android:background="@drawable/num_color"
            android:layout_weight="1"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            android:layout_margin="2sp"
            android:background="@drawable/num_color"
            android:layout_weight="1"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            android:background="@drawable/num_color"
            android:layout_margin="@dimen/soft_margine"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/C_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:text="C"
            android:textStyle="bold"
            android:background="@drawable/operation_btn_bg"
            android:layout_margin="@dimen/soft_margine"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/soft_margine"
                    android:layout_weight="1"
                    android:background="@drawable/num_color"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/soft_margine"
                    android:layout_weight="1"
                    android:background="@drawable/num_color"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/soft_margine"
                    android:layout_weight="1"
                    android:background="@drawable/num_color"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/zerro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/soft_margine"
                    android:layout_weight="1"
                    android:background="@drawable/num_color"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/soft_margine"
                    android:layout_weight="1"
                    android:background="@drawable/num_color"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ANSWER"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/soft_margine"
                    android:layout_weight="1"
                    android:background="@drawable/num_color"
                    android:text="Ans"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="="
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/equal_btn"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
